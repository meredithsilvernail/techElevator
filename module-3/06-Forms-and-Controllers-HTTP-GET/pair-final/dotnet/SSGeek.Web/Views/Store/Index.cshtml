@model IEnumerable<SSGeek.Web.Models.Product>
@{
    ViewData["Title"] = "Index";
}


<section class="centeredPanel">

    <h2>Solar System Geek Gift Shop</h2>

    <div class="products">
        @foreach (var product in Model)
        {
            <div class="product">
                <div class="product-image">
                    <a asp-action="Detail" asp-controller="Store" asp-route-id="@product.ProductId">
                        <img src="@Url.Content("~/images/" + product.ImageName)" />
                    </a>
                </div>
                <div class="product-data">
                    <p class="title">@product.Name</p>
                    <p class="price">@product.Price.ToString("C")</p>
                </div>
            </div>
        }
    </div>
</section>
